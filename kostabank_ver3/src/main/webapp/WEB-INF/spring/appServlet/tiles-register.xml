<?xml version="1.0" encoding="UTF-8" ?>
<!--
타일즈 설정파일
-->
 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<!--  
		컨트롤러에서 반환하는 ModelAndView 의 setViewName(name)이 아래의 definition name과 일치하면
		include된 타일즈 화면이 응답된다
 -->
<tiles-definitions>
	<!-- 상속받아 변경 부분만 재정의한다 
		  shop_* : 컨트롤러에서 반환하는 view name이 shop_ 으로 시작하면 아래의 타일즈 설정으로 응답하도록 한다
		  * 에 해당하는 정보는 (1)로 전달받을 수 있다
	-->
	
	<!-- 회원가입 -->
	<definition name="register_*" extends="home">
		<put-attribute name="main" value="/kangbank/register/register_{1}.jsp"/>
	</definition>
	 
	 
	 <!-- 아이디, 비밀번호찾기 -->
	<definition name="find_*" extends="home">
		<put-attribute name="main" value="/kangbank/register/find_{1}.jsp"/>
	</definition>
</tiles-definitions>







